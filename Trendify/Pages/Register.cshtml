@page
@model Trendify.Views.Pages.RegisterModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trendify</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.minn.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Trendify.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    @*     <link rel="stylesheet" href="~/css/slider.css" asp-append-version="true" />
    *@
    <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <style>

        .space {
            padding-top: 30px;
        }

        #signupForm {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        h3 {
            color: #333;
        }

        .form-group label {
            color: #333;
        }

        .form-control {
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .btn-dark {
            background-color: #333;
            color: #fff;
            border: none;
        }

            .btn-dark:hover {
                background-color: #555;
            }

        /* Add styling for alerts */
        .alert-message {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 3px;
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
   
    <div class="space"></div>

            <form method="post">
            <div style="color: black;" id="signupForm">
                    <h3>Sign Up</h3>
                
                <div class="form-group">
                    <label style="color: black;" asp-for="data.Username">UserName</label>
                    <input asp-for="data.Username" class="form-control" placeholder="UserName">
                </div>
                <div class="form-group">
                    <label asp-for="data.Email" style="color: black;" for="email">Email</label>
                <input asp-for="data.Email" type="text" class="form-control" placeholder="Email">
                </div>
                <div class="form-group">
                    <label asp-for="data.Password" style="color: black;" for="password">Password</label>
                    <input asp-for="data.Password" type="password" class="form-control" placeholder="Password">
                </div>
                <div class="form-group">
                    <label asp-for="data.PhoneNumber" style="color: black;" for="phonenumber"></label>
                    <input asp-for="data.PhoneNumber" type="text" class="form-control" placeholder="Phone number"
                           style="color: black;">

                </div>

                <div style="padding-top: 10px;">
                    <button class="btn btn-dark">Sign up</button>
                </div>

                <div asp-validation-summary="All"></div>
        </div>
        
            </form>
    
    <div class="space"></div>
   
</body>
</html>
