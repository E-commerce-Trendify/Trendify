            <span asp-validation-for="data.Username" class="text-danger"></span>

            <input asp-for="data.Email" type="text" placeholder="Email" class="input" id="email">
            <span asp-validation-for="data.Email" class="text-danger"></span>

            <input asp-for="data.Password" type="password" placeholder="Password" class="input" id="password">
            <span asp-validation-for="data.Password" class="text-danger"></span>

            <input asp-for="data.PhoneNumber" type="text" placeholder="PhoneNumber" class="input" id="phonenumber">
            <span asp-validation-for="data.PhoneNumber" class="text-danger"></span>

            <button class="form-btn">Sign Up</button>
        </form>
        <div class="error-container">
            <!-- Display error messages here -->
        </div>
    </div>
