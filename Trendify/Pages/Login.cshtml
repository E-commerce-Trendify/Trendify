<body>

    <div class="form-container">
        <p class="title">Sign In</p>
        <form class="form" method="post">
            <label asp-for="users.Username"></label>
            <input asp-for="users.Username" type="text" id="username" placeholder="Username" class="input">
            <span asp-validation-for="users.Username" class="text-danger"></span>

            <label asp-for="users.Password"></label>
            <input asp-for="users.Password" type="password" id="password" placeholder="Password" class="input">
            <span asp-validation-for="users.Password" class="text-danger"></span>

            <button class="form-btn">Sign In</button>
        </form>

        <!-- Display error messages here -->
        <div class="error-container">
            <!-- Error messages will be displayed here -->
        </div>
    </div>
