@model IEnumerable<Trendify.DTOs.CategoryDtoView>

@{
    ViewData["Title"] = "Index";
}
<div class="flex-Row" style="justify-content:space-between;align-items:center">
<h2>Category</h2>

 @if (User.IsInRole("Admin"))
                    {
    <h1> <a class="btn btn-primary" asp-action="Create">Create New</a></h1>
                    }
</div>
<div class="flex-Row" style="flex-wrap:wrap">
@foreach (var item in Model) {

        <div class="card" style="width: 22rem;margin:4px">
            <a asp-action="Details" asp-route-id="@item.CategoryID">
                <img src="@item.ImageURL" class="card-img-top" alt="..." style="width:100%;height:300px">
            </a>
            <div class="card-body" style="display:flex;flex-direction:column; width:100%;">
                    <div>
                    <div class="flex-Row" style="justify-content:space-between;align-items:center ">
                        <h5 class="card-title">@item.Name</h5>
                        <h3 class="btn btn-dark" ,class="card-title" style="border-radius:50%; color:white;">@item.NumberProduct</h3>
                    </div> 
                </div>              
                <h6 >@item.Description</h6>
                <div style="display:flex; justify-content:space-around;margin-top:auto">
                    <a class="btn btn-outline-dark" asp-controller="Categories" asp-action="AllCategoryProduct" asp-route-id="@item.CategoryID">Products</a>

                    @if (User.IsInRole("Editor"))
                    {
                        <a class="btn btn-outline-warning" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-warning" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a>


                        <a class="btn btn-outline-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
                    }

                </div>
                </div>
            </div>
}
</div>

