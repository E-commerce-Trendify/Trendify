
<div class="container  mt-5" style=" border: 1px solid #000;border-radius:1%; width:400px">
    <h1 style="text-align:center">Sign up</h1>

    <form class="form-inline" method="post" asp-action="Signup">
        <div class="form-group mb-2">
            <label class="sr-only" for="username">Username:</label>
            <input type="text" name="username" class="form-control" id="username" style="background-color: #fff;" placeholder="Enter your username">
        </div>
        <div class="form-group mb-2">
            <label class="sr-only" for="email">Email:</label>
            <input type="text" name="email" class="form-control" id="email" style="background-color: #fff;" placeholder="Enter your email">
        </div>
        <div class="form-group mb-2">
            <label class="sr-only" for="password">Password:</label>
            <input type="password" name="password" class="form-control" id="password" style="background-color: #fff;" placeholder="Enter your password">
        </div>
        <div class="form-group mb-2">
            <label class="sr-only" for="phonenumber">Phone number:</label>
            <input type="text" name="phonenumber" class="form-control" id="phonenumber" style="background-color: #fff;" placeholder="Enter your phone number">
        </div>
        <div class="form-group mb-2">
            <label for="roles">Roles:</label>
            <select name="roles" class="form-control" id="roles">
                <option value="Editor">Editor</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        <button style="margin-left:150px" type="submit" class="btn btn-dark mt-2">Sign up</button>
        <div asp-validation-summary="All" class="mt-3"></div>
    </form>
</div>