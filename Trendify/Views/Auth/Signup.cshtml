<!DOCTYPE html>
<html>

<head>
    <title>Page Title</title>

    <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <style>

        .space {
            padding-top: 30px;
        }

        #signupForm {
            max-width: 400px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        h3 {
            color: #333;
        }

        .form-group label {
            color: #333;
        }

        .form-control {
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 10px;
            margin-bottom: 10px;
        }

        .btn-dark {
            background-color: #333;
            color: #fff;
            border: none;
        }

            .btn-dark:hover {
                background-color: #555;
            }

        /* Add styling for alerts */
        .alert-message {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
            padding: 10px;
            border-radius: 3px;
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
</head>

<body>

    <div class="space"></div>
    <form method="post" asp-action="Signup" id="signupForm">
        <div style="color: black;">
            <h3>Sign Up</h3>
        </div>
        <div class="form-group">
            <label style="color: black;" for="username">Username:</label>
            <input type="text" name="username" class="form-control" id="username" placeholder="Username">
        </div>
        <div class="form-group">
            <label style="color: black;" for="email">Email:</label>
            <input type="text" name="email" class="form-control" id="email" placeholder="Email">
        </div>
        <div class="form-group">
            <label style="color: black;" for="password">Password:</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Password">
        </div>
        <div class="form-group">
            <label style="color: black;" for="phonenumber">Phone number:</label>
            <input type="text" name="phonenumber" class="form-control" id="phonenumber" placeholder="Phone number"
                   style="color: black;">
        </div>
        <div class="form-group">
            <label for="roles">Roles:</label>
            <select name="roles" class="form-control" id="roles">
                <option style="color: black;" value="Editor">Editor</option>
                <option style="color: black;" value="Admin">Admin</option>
            </select>
        </div>

        <div style="padding-top: 10px;">
            <button type="button" class="btn btn-dark" onclick="validateForm()">Sign up</button>
        </div>

        <div asp-validation-summary="All"></div>
    </form>
    <div class="space"></div>
    <script>
        function validateForm() {
            var username = document.getElementById("username").value;
            var email = document.getElementById("email").value;
            var password = document.getElementById("password").value;
            var phonenumber = document.getElementById("phonenumber").value;

            if (username === "") {
                showAlert("Username is a required field!");
            } else if (email === "") {
                showAlert("Email is a required field!");
            } else if (password === "") {
                showAlert("Password is a required field!");
            } else if (phonenumber === "") {
                showAlert("Phone Number is a required field!");
            } else {
                document.getElementById("signupForm").submit(); // Submit the form if all fields are filled
            }
        }

        function showAlert(message) {
            var alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-message"; // Use the custom alert-message class
            alertDiv.innerHTML = message;

            var container = document.getElementById("signupForm");
            container.insertBefore(alertDiv, container.firstChild);

            setTimeout(function () {
                alertDiv.style.display = "none";
            }, 3000); // Hide the alert after 3 seconds
        }
    </script>
</body>

</html>
