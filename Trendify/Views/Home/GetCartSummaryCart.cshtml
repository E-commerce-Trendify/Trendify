 *@ 
        <table>
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>phoneNumber</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.User.UserName</td>
                    <td>@Model.User.Email</td>
                    <td>@Model.User.PhoneNumber</td>
                </tr>

            </tbody>
        </table>
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.cart.Items)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" alt="Image" /></td>
                        <td>@item.NameProduct</td>
                        <td>$@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <form asp-controller="Products" asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="productId" value="@item.ProductID" />


                                <button type="submit" class="btn btn-outline-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    
